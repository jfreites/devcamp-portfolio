<h1>Portfolio items</h1>

<%= link_to "Create a new item", new_portfolio_url %>

<% @portfolio_items.each do |item| %>
    <h3><%= link_to item.title, portfolio_path(item) %></h3>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
    
    <p><%= link_to "Edit this item", edit_portfolio_path(item) %></p>
<% end %>