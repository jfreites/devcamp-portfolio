<p><%= link_to portfolio_item.title, show_portfolio_path(portfolio_item) %></p>

<p><%= portfolio_item.subtitle %></p>

<p><%= portfolio_item.body %></p>

<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>

<p><%= link_to "Edit this item", edit_portfolio_path(portfolio_item) %></p>
<p><%= link_to "Delete this item", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></p>